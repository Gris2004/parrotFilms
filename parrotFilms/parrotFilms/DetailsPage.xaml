<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="parrotFilms.DetailsPage"
             Title="DetailsPage">
    <VerticalStackLayout
        Spacing="15"
        Padding="25">

        <!-- Video -->
        <WebView 
            x:Name="videoPlayer"
            HeightRequest="250"
            WidthRequest="400"
            HorizontalOptions="Fill"/>

        <!-- Título -->
        <Label x:Name="titleLabel" 
               FontSize="24" 
               FontAttributes="Bold"
               HorizontalOptions="Fill"/>

        <!-- Género -->
        <Label x:Name="categoryLabel"
               FontSize="18" 
               HorizontalOptions="Fill"/>

        <!-- Duración -->
        <Label x:Name="durationLabel"
               FontSize="16"
               TextColor="Gray"
               HorizontalOptions="Fill"/>
    </VerticalStackLayout>
</ContentPage>
