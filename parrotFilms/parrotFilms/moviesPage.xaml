<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="parrotFilms.moviesPage"
             Title="PelÃ­culas">
    <ScrollView>
        <CollectionView 
            SelectionMode="Single"
            x:Name="MoviesCollection"
            ItemsLayout="VerticalGrid, 2"
            Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="5" HasShadow="True" CornerRadius="10">
                        <StackLayout>
                            <ImageButton
                                Source="{Binding image}"
                                HeightRequest="400"
                                WidthRequest="200"
                                Aspect="AspectFill"
                                Clicked="OnDetailsClicked"/>
                            <Label
                                Text="{Binding title}"
                                HorizontalOptions="Center"
                                FontAttributes="Bold"
                                Margin="0,5,0,0"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
    </ScrollView>
</ContentPage>